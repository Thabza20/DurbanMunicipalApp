@model IEnumerable<DurbanMunicipalApp.Models.Report>

@{
    ViewData["Title"] = "All Reports";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-list me-2"></i>All Reports</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Submit New Report
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var report in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="badge bg-primary">@Html.DisplayFor(modelItem => report.ProblemType)</span>
                            @{
                                var statusClass = report.Status switch
                                {
                                    DurbanMunicipalApp.Models.ReportStatus.Submitted => "bg-secondary",
                                    DurbanMunicipalApp.Models.ReportStatus.UnderReview => "bg-warning",
                                    DurbanMunicipalApp.Models.ReportStatus.InProgress => "bg-info",
                                    DurbanMunicipalApp.Models.ReportStatus.Resolved => "bg-success",
                                    DurbanMunicipalApp.Models.ReportStatus.Closed => "bg-dark",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusClass">@Html.DisplayFor(modelItem => report.Status)</span>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title text-primary">@report.ReferenceNumber</h6>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    @report.SubmittedDate.ToString("MMM dd, yyyy 'at' h:mm tt")
                                </small>
                            </p>
                            @if (!string.IsNullOrEmpty(report.Description))
                            {
                                <p class="card-text">
                                    @(report.Description.Length > 100 ? report.Description.Substring(0, 100) + "..." : report.Description)
                                </p>
                            }
                            @if (!string.IsNullOrEmpty(report.Location))
                            {
                                <p class="card-text">
                                    <small class="text-muted">
                                        <i class="fas fa-map-marker-alt me-1"></i>
                                        @report.Location
                                    </small>
                                </p>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-action="Details" asp-route-id="@report.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No Reports Found</h4>
            <p class="text-muted">There are no reports to display at the moment.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Submit Your First Report
            </a>
        </div>
    }
</div>
